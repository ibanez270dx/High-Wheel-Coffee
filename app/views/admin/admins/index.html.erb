<h2>Admins</h2>

<p><%= link_to "Create new admin", new_admin_admin_path, class: 'btn btn-primary' %></p>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.name %></td>
        <td><%= admin.email %></td>
        <td>
          <%= link_to 'Edit', edit_admin_admin_path(admin), class: 'btn btn-small' %>
          <%= link_to 'Delete', admin_admin_path(admin), class: 'btn btn-small btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
