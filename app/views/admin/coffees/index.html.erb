<h2>Coffees</h2>

<p><%= link_to "Add new coffee", new_admin_coffee_path, class: 'btn btn-primary' %></p>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Growing Region</th>
      <th>Featured?</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @coffees.each do |coffee| %>
      <tr>
        <td><%= coffee.name %></td>
        <td><%= coffee.growing_region %></td>
        <td><%= coffee.featured? ? 'Yes' : 'No' %></td>
        <td>
          <%= link_to 'Edit', edit_admin_coffee_path(coffee), class: 'btn btn-small' %>
          <%= link_to 'Delete', admin_coffee_path(coffee), class: 'btn btn-small btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
